@using RezervasyonSistem.Data.Models
@model IEnumerable<Oda>
@{
    
    Layout = "~/Views/Shared/_LayoutPageAna.cshtml";
    var sayac = 0;
}
<div class="container-fluid">
    <div class="pad margin no-print">
        <div class="callout callout-info" style="margin-bottom: 0!important;">
            <h4><i class="fa fa-info"></i> Not:</h4>
            Mevcut odalarımız aşağıda listelenmektedir.
        </div>
    </div>
    <section class="content">
        <div class="row">

            @foreach (var oda in Model)
            {
                <div class="col-md-3">
                    <!-- Profile Image -->
                    <div class="box box-primary">
                        <div class="box-body box-profile">

                            <div>
                                <div class="box box-solid">
                                    <div class="box-body">
                                        <div id="carousel-example-generic-@oda.Id"  class="carousel slide" data-ride="carousel">
                                            <ol class="carousel-indicators">
                                              
                                                @for (int i=0; i < 3; i++)
                                                {
                                                    <li data-target="#carousel-example-generic" data-slide-to="@sayac" class=""></li>
                                                    sayac++;
                                                }

                                               
                                            </ol>
                                            <div class="carousel-inner">
                                                <div class="item active">
                                                    <img src="http://placehold.it/900x500/39CCCC/ffffff&text=I+Love+Bootstrap" alt="First slide">
                                                    <div class="carousel-caption">
                                                        First Slide
                                                    </div>
                                                </div>
                                                <div class="item">
                                                    <img src="http://placehold.it/900x500/3c8dbc/ffffff&text=I+Love+Bootstrap" alt="Second slide">
                                                    <div class="carousel-caption">
                                                        Second Slide
                                                    </div>
                                                </div>
                                                <div class="item">
                                                    <img src="http://placehold.it/900x500/f39c12/ffffff&text=I+Love+Bootstrap" alt="Third slide">
                                                    <div class="carousel-caption">
                                                        Third Slide
                                                    </div>
                                                </div>
                                            </div>
                                            <a class="left carousel-control" href="#carousel-example-generic-@oda.Id" data-slide="prev">
                                                <span class="fa fa-angle-left"></span>
                                            </a>
                                            <a class="right carousel-control" href="#carousel-example-generic-@oda.Id" data-slide="next">
                                                <span class="fa fa-angle-right"></span>
                                            </a>
                                        </div>
                                    </div>
                                    <!-- /.box-body -->
                                </div>
                                <!-- /.box -->
                            </div>



                            <ul class="list-group list-group-unbordered">
                                <li class="list-group-item">
                                    <b>Fiyat</b> <a class="pull-right">@oda.Fiyat₺</a>
                                </li>
                                <li class="list-group-item">
                                    <b>Kişi Sayısı</b> <a class="pull-right">@oda.KisiSayisi</a>
                                </li>
                                <li class="list-group-item">
                                    <b>Çocuk</b> <a class="pull-right">@(oda.CocukIcinUygunMu?"Uygun":"Uygun Değil")</a>
                                </li>
                            </ul>
                            <a href="@Url.Action("RezervasyonYap","Default",new{id=oda.Id})" class="btn btn-primary btn-block"><b>Rezervasyon Yap</b></a>
                        </div>
                        <!-- /.box-body -->
                    </div>
                    <!-- /.box -->
                    <!-- About Me Box -->
                    <!-- /.box -->
                </div>
            }

            <!-- /.col -->

        </div>
        <!-- /.row -->
    </section>

</div>


@section extraScript{
    <script>
        $().ready(function(){
            $('.carousel').carousel({
                interval: 10000,
                keyboard:true
            });
        });

    </script>
}